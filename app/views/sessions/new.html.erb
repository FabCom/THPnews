<h2>Formulaire d'authentification</h2>

<div class="d-flex justify-content-center mt-5" >
  <div class="d-flex justify-content-center mt-5 border border-primary rounded  p-3" style="width: 18em">
      <%= simple_form_for :session, url: url_for(:action => 'create', :controller => 'sessions'), method: :post do |f| %>

      <div class="form-inputs">
          <%= f.input :email %>
          <%= f.input :password %>
      </div>

      <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, value: "Valider", class: 'btn btn-primary' %>
      </div>
      <% end %>
  </div>
</div>

