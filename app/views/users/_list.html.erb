<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center">
  <h1>UTILISATEURS</h1>
  <!--<p class="ml-4"><%= link_to 'Créer', new_user_path, class: 'btn btn btn-primary btn-ms' %></p> -->
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Email</th>
      <th>Nb NEWS</th>
      <th>Nb COMMENTAIRES</th>
      <th>Nb LIKES</th>
      <th>Description</th>
      <th>Date de naissance</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.posts.length %></td>
        <td><%= user.comments.length %></td>
        <td><%= user.likes.length %></td>
        <td><%= user.description %></td>
        <td><%= user.born_date %></td>
        <td><%= user.city.name %></td>
        <%if current_user == user %>
          <td><%= link_to 'Show', user , class: "btn btn-primary btn-sm" %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info btn-sm"%>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>